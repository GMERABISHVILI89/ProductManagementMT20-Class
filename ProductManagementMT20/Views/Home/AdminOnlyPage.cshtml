@using Microsoft.AspNetCore.Identity
@using ProductManagementMT20.Models.Entities
@model List<UserWithRolesViewModel>
@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<!-- Add User Button -->
<a asp-action="Register" asp-controller="Home" class="btn btn-primary mb-3">Add New User</a>

<!-- User List Table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@(user.Roles != null && user.Roles.Any() ? string.Join(", ", user.Roles) : "No Role Assigned")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>